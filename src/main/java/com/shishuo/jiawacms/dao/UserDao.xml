<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shishuo.jiawacms.dao.UserDao">

	<insert id="addUser" parameterType="com.shishuo.jiawacms.entity.User">
		insert into
		user(openId,type,name,createTime)
		value(#{openId},#{type},#{name},#{createTime})
		<selectKey resultType="long" keyProperty="userId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<select id="getUserById" 
		resultType="com.shishuo.jiawacms.entity.User">
		select * from user where userId=#{userId}
	</select>
	
	<select id="getUserList"
		resultType="com.shishuo.jiawacms.entity.User">
		select * from user limit #{offset}, #{rows}
	</select>
	
	<select id="getUserListCount"
		resultType="Integer">
		select count(*) from user
	</select>
	
	<delete id="deleteUserById" parameterType="com.shishuo.jiawacms.entity.User">
		delete from user where userId=#{userId}
	</delete>
	
	<update id="updateUser" parameterType="com.shishuo.jiawacms.entity.User">
		update user set openId=#{openId},type=#{type},name=#{name},createTime=#{createTime}
	</update>
</mapper>  