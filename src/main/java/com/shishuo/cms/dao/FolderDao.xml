<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shishuo.cms.dao.FolderDao">

	<select id="getFolderById" 
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder where folderId=#{folderId}
	</select>
	
	<select id="getFolderByEname" 
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder where ename=#{ename}
	</select>
	
	<select id="getFolderListByFatherId" 
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder where fatherId=#{fatherId} order by sort desc
	</select>
	
	<insert id="addFolder" parameterType="com.shishuo.cms.entity.Folder">
		insert into
		folder(fatherId,ename,name,level,count,status,type,createTime,sort,rank)
		value(#{fatherId},#{ename},#{name},#{level},#{count},#{status},#{type},#{createTime},#{sort},#{rank})
		<selectKey resultType="long" keyProperty="folderId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<delete id="deleteFolder" parameterType="com.shishuo.cms.entity.Folder">
		delete from folder where folderId=#{folderId}
	</delete>
	
	<update id="updateFolder" parameterType="com.shishuo.cms.entity.Folder">
		update folder set fatherId=#{fatherId},ename=#{ename},name=#{name},status=#{status},type=#{type},sort=#{sort}
		where folderId=#{folderId}
	</update>
	
	<select id="getAllList"
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder
	</select>
	
	<select id="getAllListPage" parameterType="Integer"
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder limit #{offset},#{rows}
	</select>
	
	<select id="getAllListPageCount"
		resultType="long">
		select count(*) from folder
	</select>

	<select id="getFolderVoListByFatherId" 
		resultType="com.shishuo.cms.entity.vo.FolderVo">
		select * from folder where fatherId=#{fatherId}
	</select>
</mapper>  
