<mapper namespace="com.shishuo.cms.dao.FolderDao">

	<!-- ############################## -->
	<!-- ######        增加                      ###### -->
	<!-- ############################## -->
	
	<insert id="addFolder" parameterType="com.shishuo.cms.entity.Folder">
		insert into
		folder(fatherId,ename,name,path,level,count,status,type,createTime,sort,rank)
		value(#{fatherId},#{ename},#{name},#{path},#{level},#{count},#{status},#{type},#{createTime},#{sort},#{rank})
		<selectKey resultType="long" keyProperty="folderId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	
	<!-- ############################## -->
	<!-- ######       删除                         ###### -->
	<!-- ############################## -->
	
	<delete id="deleteFolder" parameterType="long">
		delete from folder where folderId=#{folderId}
	</delete>
	
	<!-- ############################## -->
	<!-- ######       修改                         ###### -->
	<!-- ############################## -->
	
	<update id="updateFolder" parameterType="com.shishuo.cms.entity.Folder">
		update folder set fatherId=#{fatherId},ename=#{ename},name=#{name},path=#{path},status=#{status},type=#{type},sort=#{sort}
		where folderId=#{folderId}
	</update>
	
	<update id="updateSort" parameterType="long">
		update folder set sort=#{sort} where folderId=#{folderId}
	</update>
	
	<update id="updatePath">
		update folder set path=#{path} where folderId=#{folderId}
	</update>
	
	<!-- ############################## -->
	<!-- ######       查询                         ###### -->
	<!-- ############################## -->
	
	<select id="getFolderById" 
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder where folderId=#{folderId}
	</select>
	
	<select id="getFolderListByFatherId" 
		resultType="com.shishuo.cms.entity.vo.FolderVo">
		select * from folder where fatherId=#{fatherId} order by sort
	</select>
	
	<select id="getFolderByEname" 
		resultType="com.shishuo.cms.entity.Folder">
		select * from folder where ename=#{ename}
	</select>
	
	<select id="getAllFolderByType"
		resultType="com.shishuo.cms.entity.vo.FolderVo">
		select * from folder where type=#{type}
	</select>
	
</mapper>  
